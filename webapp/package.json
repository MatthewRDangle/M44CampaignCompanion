{
  "name": "@matthewrdangle/battlecry-webapp",
  "version": "1.0.0-alpha.2",
  "author": "Matthew R. Dangle",
  "browser": "./src/main.js",
  "engine": {
    "node": ">=v18.16.1"
  },
  "scripts": {
    "dev": "npm run build:tailwindcss",
    "build": "npm run build:tailwindcss && npm run build:webpack",
    "build:webpack": "webpack",
    "build:tailwindcss": "tailwindcss build -i src/main.css -o public/stylesheets/tailwind.css",
    "watch:tailwindcss": "tailwindcss build -i src/main.css -o public/stylesheets/tailwind.css --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MatthewRDangle/battlecry.git"
  },
  "bugs": {
    "url": "https://github.com/MatthewRDangle/battlecry/issues"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.7",
    "copy-webpack-plugin": "^12.0.2",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.2.6",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "js-yaml": "^4.1.0",
    "mithril": "^2.0.4"
  }
}
